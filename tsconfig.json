{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@*": ["./*"],
      "@types/*": ["myTypes/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext", "es6"],
    "target": "es2015",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/ui/menubar.tsx"
  ],
  "exclude": ["node_modules"]
}
